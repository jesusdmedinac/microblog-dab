---
import { Image } from "astro:assets";
import logoYoutube from "../../images/logo-youtube.png";

interface Props {
  title: string;
  description: string;
  url: string;
  image: {
    src: ImageMetadata;
    alt: string;
  },
  socialImage: {
    src: ImageMetadata;
    alt: string;
  }
}
const { title, description, url, image, socialImage } = Astro.props;
---
<div class="py-6 ">
  <section class="flex flex-col items-center gap-2.5">
    <a class="w-full bg-base-50 hover:bg-base-100 transition-colors rounded-lg" href={url}>
      <div class="flex flex-row justify-between gap-4 border border-base-100 rounded-lg p-4">
        <div class="flex flex-col gap-2">
          <p class="text-lg font-medium">{title}</p>
          <p class="text-base text-base-600">{description}</p>
          <div class="flex flex-row gap-2 items-center">
            <Image
              width={144}
              height={144}
              src={socialImage.src}
              alt={socialImage.alt}
              class="w-8 h-8 object-cover rounded-full"
            />
            <p class="text-base text-base-600">{url}</p>
          </div>
        </div>
        <Image
          width={512}
          height={512}
          src={image.src}
          alt={image.alt}
          class="w-32 h-32 object-cover rounded-full"
        />
      </div>
