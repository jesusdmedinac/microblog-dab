---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import BlogEntries from "@/components/entries/BlogEntry.astro";
const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---
<BaseLayout title="Discusiones Alrededor de la Biblia" displayBanner={true}>
  <section>
    <div class="grid grid-cols-1 mt-4 gap-8 gap-y-24 sm:grid-cols-2">
      {
        sortedPosts.map((post) => (
          <BlogEntries
            url={"/posts/" + post.slug}
            alt={post.data.title}
            tags={post.data.tags}
            title={post.data.title}
            author={post.data.author}
            image={post.data.image.url}
            description={post.data.description}
            pubDate={post.data.pubDate.toLocaleDateString("es-MX", {
            day: "numeric",
            month: "short",
            year: "numeric",
          })}
          />
        ))
      }
    </div>
  </section>
</BaseLayout>