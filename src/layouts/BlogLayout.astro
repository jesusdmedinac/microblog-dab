---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import PriorNextEpisode from "@/components/PriorNextEpisode.astro";
import Social from "@/components/Social.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} displayBanner={false}>
  <section>
    <div class="py-24">
      <div class="lg:text-center">
        <div class="">
          <h1
            class="text-4xl text-balance font-medium font-display text-base-900"
          >
            {frontmatter.title}
          </h1>
          <p class="mt-4 text-zinc-500 text-sm text-balance">
            <em>{frontmatter.description}</em>
          </p>
        </div>
        <a href={frontmatter.url}>
          <Image
            width={1280}
            height={720}
            src={frontmatter.image.url}
            alt={frontmatter.image.alt}
            class="object-cover object-center w-full aspect-12/7 rounded-xl mt-4"
          />
        </a>
        <div class="flex flex-col justify-between mt-4 md:flex-row">
          <p class="text-xs text-zinc-500">
            {frontmatter.pubDate.toLocaleDateString("es-MX", {
              day: "numeric",
              month: "long",
              year: "numeric",
            })} - {frontmatter.author}
          </p>
          <div class="flex gap-3">
            {
              frontmatter.tags.map((tag) => (
                <span class="hover:text-blue-500 text-xs font-medium text-base-600">
                  <a href={`/tags/${tag}`}>{tag}</a>
                </span>
              ))
            }
          </div>
        </div>
      </div>

      <div class="prose prose-sm mt-12 mb-4 mx-auto">
        <slot />
      </div>
      <Social className="text-xl text-base-500 text-center mb-4 font-bold" />
    </div>
  </section>
  <PriorNextEpisode prior={frontmatter.prior} next={frontmatter.next} />
</BaseLayout>
